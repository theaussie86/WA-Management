{
  "name": "wa-management",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPatterns=\"__tests__/(components|hooks|lib|utils)\" --coverage --testPathIgnorePatterns=\"__tests__/utils/ai-service-mocks.ts\"",
    "test:ui-components": "jest --config=jest.config.components.js --testPathPatterns=\"__tests__/components/ui\" --coverage",
    "test:custom-components": "jest --config=jest.config.components.js --testPathPatterns=\"__tests__/components\" --coverage",
    "test:lib": "jest --config=jest.config.critical.js --testPathPatterns=\"__tests__/lib\" --coverage",
    "test:hooks": "jest --config=jest.config.hooks.js --testPathPatterns=\"__tests__/hooks\" --coverage",
    "test:critical": "npm run test:lib && npm run test:hooks",
    "test:components": "npm run test:ui-components && npm run test:custom-components",
    "test:integration": "jest --config=jest.config.integration.js --testPathPatterns=\"__tests__/integration\" --coverage",
    "test:performance": "jest --testPathPatterns=\"__tests__/integration.*performance\" --testTimeout=60000",
    "test:smoke": "jest --testPathPatterns=\"__tests__/smoke\" --testEnvironment=node",
    "type-check": "tsc --noEmit",
    "vercel-build": "next build",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated | grep -v -E '(tailwindcss|@types/node)' || true",
    "deps:update": "npm update",
    "deps:clean": "rm -rf node_modules package-lock.json && npm install",
    "ci:full": "npm run type-check && npm run lint && npm run test:ci && npm run build",
    "ci:quick": "npm run type-check && npm run lint && npm run test:critical",
    "ci:components": "npm run type-check && npm run lint && npm run test:custom-components",
    "precommit": "npm run lint:fix && npm run type-check && npm run test:critical",
    "postinstall": "npm run type-check"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.56.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "latest",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "^15.5.3",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  }
}
