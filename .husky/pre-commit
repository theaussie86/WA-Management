#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run linting
echo "📝 Running ESLint..."
npm run lint:fix

# Run type checking
echo "🔧 Running TypeScript type check..."
npm run type-check

# Run unit tests
echo "🧪 Running unit tests..."
npm run test:unit

echo "✅ Pre-commit checks passed!"
